@model CoffeeShop.Models.ContactMessage

@{
    ViewData["Title"] = "Contact Us"; 
}

<section data-bs-version="5.1" class="form7 cid-tsJ8wGtENs" id="form7-q">
    <div class="container">
        <div class="mbr-section-head">
            <h3 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                <strong>Get in Touch</strong>
            </h3>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-lg-8 mx-auto mbr-form">
                <form asp-action="AddContact" asp-controller="Contact" method="post" class="mbr-form form-with-styler mx-auto">
                    @Html.AntiForgeryToken()

                    <p class="mbr-text mbr-fonts-style align-center mb-4 display-7">
                        One of our team will be in contact with you shortly.
                    </p>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="dragArea row">
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3" data-for="name">
                            <input asp-for="Name" class="form-control" placeholder="Name" id="name-form7-q">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3" data-for="email">
                            <input asp-for="Email" class="form-control" placeholder="Email" id="email-form7-q">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div data-for="message" class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message" id="message-form7-q"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="col-auto mbr-section-btn align-center">
                            <button type="submit" class="btn btn-primary display-4" style="background-color: #d1b181; color: white;">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
